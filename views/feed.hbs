        $(document).ready(function(){
            init();
        });
    </script> --}}

<script>
function acceptFriendRequest(id){
    axios
        .put('/api/friends/accept/'+id)
        .then(function(res) {
            window.location.reload();
        })

}


function declineFriendRequest(id){
    axios
        .put('/api/friends/decline/'+id)
        .then(function(res) {
            window.location.reload();
        })
}
</script>
</body>